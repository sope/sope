{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "lib",
    "declarationDir": "./temp",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "skipLibCheck": true
  },
  "vueCompilerOptions": {
    "skipTemplateCodegen": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
